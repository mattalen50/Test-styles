{% if content %}
  <div {{ attributes.addClass('law-layout').addClass('layout--beaker') }}>
  {% if content.header %}
    <div {{ region_attributes.header.addClass('law-layout-area area--header area--constrain') }}>
      {{ content.header }}
    </div>
  {% endif %}
  {% if content.sidebar_above %}
    <div {{ region_attributes.sidebar_above.addClass('law-layout-area area--sidebar-above') }}>
      {{ content.sidebar_above }}
    </div>
  {% endif %}
  {% if content.main %}
    <div {{ region_attributes.main.addClass('law-layout-area area--main') }}>
      {{ content.main }}
    </div>
  {% endif %}
  {% if content.sidebar_first %}
    <div {{ region_attributes.sidebar_first.addClass('law-layout-area area--sidebar-first') }}>
      {{ content.sidebar_first }}
    </div>
  {% endif %}
  {% if content.footer %}
    <div {{ region_attributes.footer.addClass('law-layout-area area--footer area--constrain') }}>
      {{ content.footer }}
    </div>
  {% endif %}
  </div>
{% endif %}
